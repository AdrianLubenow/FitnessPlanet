<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="nav-link d-flex align-items-center mr-2" data-toggle="dropdown">
                <span class="icon-span"><i class="fas fa-user fa-lg"></i></span>
            </div>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <span class="icon-span"><i class="fas fa-user-circle fa-lg"></i></span>
                    <span>Profile</span>
                </a>
                <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-link">
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <div class="nav-link d-flex align-items-center mr-2" data-toggle="dropdown" style="font-size:25px;">
                <span class="icon-span"><i class="fas fa-user-circle fa-lg"></i></span>
            </div>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">
                    <span class="icon-span"><i class="fas fa-address-card fa-lg"></i></span>
                    <span>Register</span>
                </a>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">
                    <span class="icon-span"><i class="fas fa-sign-in-alt fa-lg"></i></span>
                    <span>Sign In</span>
                </a>
            </div>
        </li>
    }
</ul>

<style>
    .icon-span {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        margin-right: 0.5rem;
        line-height: 1;
    }
</style>
