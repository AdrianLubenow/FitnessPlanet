<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessPlanet</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-pink border-bottom border-dark rounded mb-3" style="background-color: #e86363;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; font-family: 'Montserrat', sans-serif; font-size: 24px;">FitnessPlanet</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Product" asp-action="">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Contacts" asp-action="ContactForm">Contacts</a>
                        </li>
                        @if (this.User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                            </li>
                        }
                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                        {
                            <li class="nav-item active">
                                <div class="dropdown show">
                                    <a class="nav-link active dropdown-toggle text-black" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Statistic Module
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Client" asp-action="Index"><i class="fas fa-user"></i> Clients</a>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="Index"><i class="fas fa-shopping-cart"></i> Orders</a>
                                        <a class="dropdown-item" asp-controller="Statistics" asp-action="Index"><i class="fas fa-pencil-square-o"></i> Statistics</a>
                                        <a class="dropdown-item" asp-controller="Contacts" asp-action="Index"><i class="fas fa-envelope"></i> Messages</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="background-color: #de6262;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <a href="https://www.facebook.com/" class="social-icon"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="https://www.instagram.com/" class="social-icon"><i class="fab fa-instagram fa-lg"></i></a>
                    <a href="https://twitter.com" class="social-icon"><i class="fab fa-twitter fa-lg"></i></a>
                </div>
                <div class="col-md-4">
                    &copy; 2023 - FitnessPlanet - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline text-md-right">
                        <a asp-area="" asp-controller="Contacts" asp-action="ContactForm" class="text-light">Contact Us</a>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
