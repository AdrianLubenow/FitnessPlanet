@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
</head>

<style>
    .carousel-item img {
        border: 5px solid #F5DEB3;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        max-width: 100%;
        height: auto;
    }

    .carousel-control-prev, .carousel-control-next {
        width: 10%;
        flex: none;
        margin-left: -6%;
        margin-right: -6%;
    }
    .container {
        max-width: 90%;
    }
</style>


<div class="jumbotron jumbotron-fluid" style="background: linear-gradient(to right, #de6262, #ffb88c)">
  <div class="container">
    <h1 class="display-4 text-white font-weight-bold">Welcome to FitnessPlanet!</h1>
    <p class="lead text-white">Get ready to transform your body and mind with our state-of-the-art fitness machines.</p>
    <a href="/Product" class="btn btn-lg btn-danger">Start shopping!</a>
  </div>
</div>

<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="mask flex-center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-7 col-12 order-md-1 order-2">
                            <h4 class="text-center">
                                <br /> Fitness machines are the ultimate tools that enable you to unlock your full physical potential, empowering you to push your limits and achieve your fitness goals like never before!
                            </h4>
                        </div>
                        <style>
                            .text-center {
                                color: #F5F5DC;
                            }
                        </style>
                        <div class="col-md-5 col-12 order-md-2 order-1"><img src="https://images.unsplash.com/photo-1540497077202-7c8a3999166f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Z3ltJTIwZXF1aXBtZW50fGVufDB8fDB8fA%3D%3D&w=1000&q=80" width="500" height="215" class="mx-auto" alt="slide"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="mask flex-center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-7 col-12 order-md-1 order-2">
                            <h4 class="text-center">
                                <br /> Fitness machines are a powerful tool that can transform your body and elevate your fitness journey to new heights!
                            </h4>
                        </div>
                        <style>
                            .text-center {
                                color: #F5F5DC;
                            }
                        </style>
                        <div class="col-md-5 col-12 order-md-2 order-1"><img src="https://images.jhtassets.com/e91ac67ff5d08b93c1fb5bf7dba68f6eabe337a4/" width="500" height="215" class="mx-auto" alt="slide"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="mask flex-center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-7 col-12 order-md-1 order-2">
                            <h4 class="text-center">
                                Whether you're a beginner or an experienced fitness enthusiast, there's nothing quite like the rush of endorphins that comes from a challenging workout on a top-quality fitness machine.
                            </h4>
                        </div>
                        <style>
                            .text-center {
                                color: #F5F5DC;
                            }
                        </style>
                        <div class="col-md-5 col-12 order-md-2 order-1"><img src="https://www.intenzafitness.com/upload/images/20210511_Aesthetics_Fitness_Club_GOLD_4.jpg" width="500" height="215" class="mx-auto" alt="slide"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
</div>
