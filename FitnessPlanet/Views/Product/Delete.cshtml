@model FitnessPlanet.Models.Product.ProductDeleteVM

@{
    ViewData["Title"] = "Delete";
}

<style>
    .card {
        background-color: #ffb88c;
        max-width: 500px;
        margin: 0 auto;
        margin-top: 50px;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <center><h3>Delete</h3></center>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Are you sure you want to delete this?</h5>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <p><strong>Product Name:</strong> @Model.ProductName</p>
                            <p><strong>Manufacturer:</strong> @Model.ManifacturerName</p>
                            <p><strong>Category:</strong> @Model.CategoryName</p>
                            <p><strong>Description: </strong>@Model.Description</p>
                            <p><strong>Color:</strong> @Model.Color</p>
                            <p><strong>Quantity:</strong> @Model.Quantity</p>
                            <p><strong>Price:</strong> @Model.Price</p>
                            <p><strong>Discount:</strong> @Model.Discount.ToString("N0")%</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

