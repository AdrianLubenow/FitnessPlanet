@model FitnessPlanet.Models.Order.OrderConfirmVM

@{
    ViewData["Title"] = "Confirm Order";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <center><h3>Confirm Your Order</h3></center>
                </div>
                <div class="card-body text-center">
                    <img src="@Url.Content(Model.Picture)" class="img-fluid rounded mb-3" style="max-height: 300px;" alt="@Model.ProductName">
                    <h5 class="card-title">@Model.ProductName</h5>
                    <p class="card-text">@Model.Description</p>
                    <hr>
                    <h5 class="card-title">Order Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Quantity:</strong> @Model.Quantity</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Price:</strong> @Model.Price</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Discount:</strong> @Model.Discount %</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Total:</strong> $@Model.TotalPrice.ToString("N2")</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <form asp-controller="Order" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" value="Confirm" asp-controller="Order" class="btn btn-primary mr-2">Place Order</button>
                        <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
                        <input type="hidden" asp-for="Quantity" value="@Model.Quantity" />
                        <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                        <input type="hidden" asp-for="Price" value="@Model.Price" />
                        <input type="hidden" asp-for="Discount" value="@Model.Discount" />
                    </form>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
